# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_db_password
DB_NAME=neuralfit

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_COOKIE_NAME=refreshToken

# CORS Configuration
FRONTEND_URL=http://localhost:3006
CORS_ORIGIN=http://localhost:3006,http://localhost:3000

# Security Settings
COOKIE_SECURE=false # Set to true in production with HTTPS
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # requests per window

# AI Model Configuration
AI_MODEL_PATH=./models/MentaLLaMA-chat-7B
AI_MODEL_REPO=Felladrin/mentallama-chat-7b
AI_DEVICE=cuda # or 'cpu' if no GPU available
AI_MAX_CONTEXT_LENGTH=4096
AI_MAX_NEW_TOKENS=512
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_REPETITION_PENALTY=1.2
AI_DO_SAMPLE=true
AI_TOP_K=50
